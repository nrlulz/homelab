{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "fileMatch": [
      "apps/.*\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "\\.ya?ml$"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "bootstrap/talconfig.yaml"
      ],
      "matchStrings": [
        "\\s*# renovate: depName=(?<depName>\\S+) datasource=(?<datasource>\\S+)( repository=(?<registryUrl>\\S+))?\\n\\s*?version: (?<currentValue>\\S+?)\\s"
      ]
    }
  ],
  "ignoreTests": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "description": [
        "loose versioning for weird version numbers"
      ],
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "binhex/arch-delugevpn",
        "binhex/arch-privoxyvpn",
        "binhex/arch-sabnzbdvpn",
        "plexinc/pms-docker"
      ],
      "versioning": "loose"
    }
  ]
}
