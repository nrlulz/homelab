{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>nrlulz/homelab//.github/renovate/changelogs.json5",
    "github>nrlulz/homelab//.github/renovate/groups.json5",
    "github>nrlulz/homelab//.github/renovate/pins.json5",
    ":configMigration",
    ":disableRateLimiting",
    ":skipStatusChecks",
    ":timezone(America/Los_Angeles)"
  ],
  "argocd": {
    "managerFilePatterns": [
      "/apps/.*\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.ya?ml$/"
      ],
      "matchStrings": [
        "\\s*# renovate: depName=(?<depName>\\S+) datasource=(?<datasource>\\S+)( repository=(?<registryUrl>\\S+))?\\n.*\\S+: (?<currentValue>\\S+?)\\s"
      ]
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.github/workflows/diff\\.yaml$/"
      ],
      "matchStrings": [
        "(?i)image: (?<depName>\\S+):(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "automerge patch updates (if major version is not 0)",
      "matchUpdateTypes": [
        "patch"
      ],
      "matchCurrentVersion": "!/^v?0/",
      "automerge": true
    },
    {
      "description": "automerge all updates",
      "matchPackageNames": [
        "ghcr.io/calibrain/calibre-web-automated-book-downloader",
        "plexinc/pms-docker"
      ],
      "automerge": true
    },
    {
      "description": "use loose versioning for packages with weird version numbers",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "binhex/arch-privoxyvpn",
        "binhex/arch-qbittorrentvpn",
        "binhex/arch-sabnzbdvpn",
        "crocodilestick/calibre-web-automated",
        "plexinc/pms-docker"
      ],
      "versioning": "loose"
    },
    {
      "description": "don't automerge talos updates",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/siderolabs/installer",
        "ghcr.io/siderolabs/kubelet",
        "ghcr.io/siderolabs/talosctl"
      ],
      "automerge": false
    },
    {
      "description": "separate minor/patch updates",
      "matchPackageNames": [
        "ghcr.io/siderolabs/installer",
        "ghcr.io/siderolabs/kubelet",
        "ghcr.io/siderolabs/talosctl",
        "homeassistant/home-assistant"
      ],
      "separateMinorPatch": true
    },
    {
      "description": "don't separate major/minor updates for packages using YYYY.MM.DD versioning",
      "matchPackageNames": [
        "homeassistant/home-assistant"
      ],
      "separateMajorMinor": false
    },
    {
      "matchPackageNames": [
        "ghcr.io/psybers/actual-helpers"
      ],
      "pinDigests": true
    }
  ]
}
