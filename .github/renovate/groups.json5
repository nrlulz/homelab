{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "group talos updates",
      "matchPackageNames": [
        "ghcr.io/siderolabs/installer",
        "ghcr.io/siderolabs/talosctl"
      ],
      "groupName": "talos",
      "minimumGroupSize": 2
    },
    {
      "description": "group kubernetes updates",
      "matchPackageNames": [
        "docker.io/kindest/node",
        "ghcr.io/nrlulz/kubectl",
        "ghcr.io/siderolabs/kubelet"
      ],
      "groupName": "kubernetes",
      "minimumGroupSize": 3
    },
    {
      "description": "group actual and actual-helpers updates",
      "matchPackageNames": [
        "ghcr.io/actualbudget/actual",
        "ghcr.io/psybers/actual-helpers"
      ],
      "groupName": "actual",
      "minimumGroupSize": 2
    },
    {
      "description": "group intel-device-plugins updates",
      "matchPackageNames": [
        "intel-device-plugins-gpu",
        "intel-device-plugins-operator"
      ],
      "groupName": "intel-device-plugins",
      "minimumGroupSize": 2
    },
    {
      "description": "group immich updates",
      "matchPackageNames": [
        "ghcr.io/immich-app/immich-machine-learning",
        "ghcr.io/immich-app/immich-server"
      ],
      "groupName": "immich",
      "minimumGroupSize": 2
    }
  ]
}
